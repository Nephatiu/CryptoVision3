<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/sponsorsBase"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:paddingLeft="8dp"
		android:paddingRight="8dp"
		android:background="#333333"
		android:gravity="bottom"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/headEdge"
			android:layout_width="match_parent"
			android:layout_height="20dp"
			android:background="#616161"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal" />
		<HorizontalScrollView
			android:id="@+id/topSpacer"
			android:layout_width="match_parent"
			android:layout_height="15dp"
			android:padding="8dp" />
		<TextView
			android:id="@+id/sponsorsTitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:gravity="top"
			android:text="Some Sponsering Ads:"
			android:textSize="14sp"
			android:textStyle="bold"
			android:textColor="#FDD835"
			android:layout_gravity="top" />
		<TextView
			android:id="@+id/settingsInfo"
			android:layout_width="wrap_content"
			android:layout_height="10dp"
			android:paddingLeft="40dp"
			android:paddingTop="8dp"
			android:paddingRight="8dp"
			android:paddingBottom="8dp"
			android:textSize="12sp"
			android:textStyle="italic"
			android:textColor="#BDBDBD" />
		<ImageView
			android:id="@+id/adBanner1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="30dp"
			android:layout_marginRight="30dp"
			android:layout_marginBottom="10dp"
			android:src="@drawable/banner_ad_1"
			android:scaleType="fitStart"
			android:layout_gravity="center_horizontal|center_vertical" />
		<ImageView
			android:id="@+id/adBanner2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="30dp"
			android:layout_marginTop="10dp"
			android:layout_marginRight="30dp"
			android:layout_marginBottom="10dp"
			android:src="@drawable/banner_ad_2"
			android:scaleType="fitStart"
			android:layout_gravity="center_horizontal|center_vertical" />
		<ImageView
			android:id="@+id/adBanner3"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="30dp"
			android:layout_marginTop="10dp"
			android:layout_marginRight="30dp"
			android:layout_marginBottom="10dp"
			android:src="@drawable/banner_ad_3"
			android:scaleType="fitStart"
			android:layout_gravity="center_horizontal|center_vertical" />
		<ImageView
			android:id="@+id/adBanner4"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="30dp"
			android:layout_marginTop="10dp"
			android:layout_marginRight="30dp"
			android:layout_marginBottom="10dp"
			android:src="@drawable/banner_ad_4"
			android:scaleType="fitStart"
			android:layout_gravity="center_horizontal|center_vertical" />
		<com.google.android.gms.ads.AdView
			android:id="@+id/adBanner5"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="30dp"
			android:layout_marginTop="10dp"
			android:layout_marginRight="30dp"
			android:layout_marginBottom="10dp"
			app:adSize="BANNER"
			app:adUnitId="ca-app-pub-1087736748248488/2777554924" />
		<ScrollView
			android:id="@+id/upPusher"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:padding="8dp"
			android:layout_weight="5" />
		<LinearLayout
			android:id="@+id/footHeader"
			android:layout_width="match_parent"
			android:layout_height="45dp"
			android:background="#616161"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal">
			<TextView
				android:id="@+id/backButton"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingLeft="15dp"
				android:paddingTop="6dp"
				android:paddingRight="15dp"
				android:paddingBottom="6dp"
				android:gravity="center_horizontal|center_vertical"
				android:text="â—€"
				android:textSize="20sp"
				android:textStyle="bold"
				android:textColor="#FDD835" />
			<ImageView
				android:id="@+id/homeButton"
				android:layout_width="25dp"
				android:layout_height="25dp"
				android:src="@drawable/cvn_app"
				android:scaleType="fitCenter"
				android:layout_gravity="center_horizontal|center_vertical" />
			<TextView
				android:id="@+id/versionSpam"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingLeft="8dp"
				android:paddingTop="8dp"
				android:paddingRight="6dp"
				android:paddingBottom="8dp"
				android:gravity="right|center_vertical"
				android:text="v0.00 [b0] ~ PhoeniX"
				android:textSize="10sp"
				android:textStyle="italic"
				android:textColor="#E0E0E0"
				android:layout_weight="5" />
			<ImageView
				android:id="@+id/cVnLogo"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:paddingLeft="4dp"
				android:paddingTop="4dp"
				android:paddingRight="12dp"
				android:paddingBottom="4dp"
				android:src="@drawable/cvn_short"
				android:scaleType="centerInside"
				android:layout_gravity="center_horizontal|center_vertical" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
