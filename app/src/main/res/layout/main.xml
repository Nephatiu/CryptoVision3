<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/baseFrame"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:paddingLeft="8dp"
		android:paddingTop="2dp"
		android:paddingRight="8dp"
		android:background="#000000"
		android:gravity="center_horizontal|bottom"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/headEdge"
			android:layout_width="match_parent"
			android:layout_height="20dp"
			android:background="#616161"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal">
			<TextView
				android:id="@+id/portalTitle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal|center_vertical"
				android:text="cVn"
				android:textSize="12sp"
				android:textStyle="bold"
				android:textColor="#FFFFFF" />
			<TextView
				android:id="@+id/topShout1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="2dp"
				android:layout_marginRight="2dp"
				android:gravity="center_horizontal|center_vertical"
				android:text="WeJo"
				android:textSize="11sp"
				android:textStyle="bold|italic"
				android:textColor="#FFC107" />
			<TextView
				android:id="@+id/topShout2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="2dp"
				android:layout_marginRight="2dp"
				android:gravity="center_horizontal|center_vertical"
				android:text="EneMa"
				android:textSize="11sp"
				android:textStyle="bold|italic"
				android:textColor="#FFEB3B" />
			<TextView
				android:id="@+id/topShout3"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="2dp"
				android:layout_marginRight="2dp"
				android:gravity="center_horizontal|center_vertical"
				android:text="OnoMaTopEa"
				android:textSize="11sp"
				android:textStyle="bold|italic"
				android:textColor="#F06292" />
			<TextView
				android:id="@+id/topShout4"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="2dp"
				android:layout_marginRight="2dp"
				android:gravity="center_horizontal|center_vertical"
				android:text="cVnRoCkS"
				android:textSize="11sp"
				android:textStyle="bold|italic"
				android:textColor="#8BC34A" />
			<TextView
				android:id="@+id/topShout5"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="2dp"
				android:gravity="center_horizontal|center_vertical"
				android:text="KoMkOmmEr"
				android:textSize="11sp"
				android:textStyle="bold|italic"
				android:textColor="#2196F3" />
		</LinearLayout>
		<WebView
			android:id="@+id/accessPortal"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="5" />
		<ImageView
			android:id="@+id/chatShelf"
			android:layout_width="match_parent"
			android:layout_height="55dp"
			android:src="@drawable/shelf"
			android:scaleType="fitXY" />
		<com.google.android.gms.ads.AdView
			android:id="@+id/badAnner"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:alpha="0.0"
			app:adSize="BANNER"
			app:adUnitId="ca-app-pub-1087736748248488/2777554924"
			android:layout_gravity="center_horizontal|center_vertical" />
		<HorizontalScrollView
			android:id="@+id/bottomSpacer"
			android:layout_width="match_parent"
			android:layout_height="8dp"
			android:padding="8dp" />
		<ProgressBar
			android:id="@+id/loadBar"
			android:layout_width="match_parent"
			android:layout_height="3dp"
			android:layout_marginLeft="45dp"
			android:layout_marginRight="45dp"
			android:paddingLeft="12dp"
			android:paddingRight="12dp"
			android:background="#000000"
			android:indeterminate="false"
			style="?android:progressBarStyleHorizontal"
			android:layout_gravity="left|center_vertical" />
		<LinearLayout
			android:id="@+id/footHeader"
			android:layout_width="match_parent"
			android:layout_height="40dp"
			android:background="#616161"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/cVnLogo"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:paddingLeft="12dp"
				android:paddingTop="4dp"
				android:paddingRight="4dp"
				android:paddingBottom="4dp"
				android:src="@drawable/cvn_short"
				android:scaleType="centerInside"
				android:layout_gravity="center_horizontal|center_vertical" />
			<TextView
				android:id="@+id/versionSpam"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingLeft="2dp"
				android:paddingTop="8dp"
				android:paddingRight="8dp"
				android:paddingBottom="8dp"
				android:gravity="left|center_vertical"
				android:text="v0.00 [b0] ~ Blob"
				android:textSize="10sp"
				android:textStyle="italic"
				android:textColor="#E0E0E0"
				android:layout_weight="5" />
			<TextView
				android:id="@+id/settingsPointer"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal|center_vertical"
				android:text="Settings ---==&gt;"
				android:textSize="20sp"
				android:textStyle="bold|italic"
				android:textColor="#FDD835" />
			<DigitalClock
				android:id="@+id/timeDigital"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="2dp"
				android:background="@android:color/transparent"
				android:layout_gravity="center_horizontal|center_vertical" />
			<AnalogClock
				android:id="@+id/timeAnalog"
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:layout_gravity="center_horizontal|center_vertical" />
			<TextView
				android:id="@+id/settingsButton"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingLeft="15dp"
				android:paddingTop="6dp"
				android:paddingRight="15dp"
				android:paddingBottom="6dp"
				android:gravity="center_horizontal|center_vertical"
				android:text="☢"
				android:textSize="20sp"
				android:textStyle="bold"
				android:textColor="#FDD835" />
			<TextView
				android:id="@+id/exitButton"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:gravity="center_horizontal|center_vertical"
				android:text="❎"
				android:textSize="16sp"
				android:textColor="#350000" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
