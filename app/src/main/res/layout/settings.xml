<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/settingsBase"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:paddingLeft="8dp"
		android:paddingRight="8dp"
		android:background="#333333"
		android:gravity="bottom"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/headEdge"
			android:layout_width="match_parent"
			android:layout_height="20dp"
			android:background="#616161"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal" />
		<HorizontalScrollView
			android:id="@+id/topSpacer"
			android:layout_width="match_parent"
			android:layout_height="15dp"
			android:padding="8dp" />
		<TextView
			android:id="@+id/settingsTitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:gravity="top"
			android:text="cVn App-Settings:"
			android:textSize="14sp"
			android:textStyle="bold"
			android:textColor="#FDD835"
			android:layout_gravity="top" />
		<TextView
			android:id="@+id/settingsInfo"
			android:layout_width="wrap_content"
			android:layout_height="10dp"
			android:paddingLeft="40dp"
			android:paddingTop="8dp"
			android:paddingRight="8dp"
			android:paddingBottom="8dp"
			android:textSize="12sp"
			android:textStyle="italic"
			android:textColor="#BDBDBD" />
		<Switch
			android:id="@+id/settingShelf"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="60dp"
			android:paddingTop="4dp"
			android:paddingRight="8dp"
			android:paddingBottom="4dp"
			android:gravity="left|center_vertical"
			android:text="Bottom Shelf"
			android:textSize="12sp"
			android:textStyle="italic"
			android:textColor="#FFFFFF" />
		<Switch
			android:id="@+id/settingBorders"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="60dp"
			android:paddingTop="4dp"
			android:paddingRight="8dp"
			android:paddingBottom="4dp"
			android:gravity="left|center_vertical"
			android:text="Side-Borders"
			android:textSize="12sp"
			android:textStyle="italic"
			android:textColor="#FFFFFF" />
		<Switch
			android:id="@+id/settingExitbutton"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="60dp"
			android:paddingTop="4dp"
			android:paddingRight="8dp"
			android:paddingBottom="4dp"
			android:gravity="left|center_vertical"
			android:text="Dedicated Exit Button"
			android:textSize="12sp"
			android:textStyle="italic"
			android:textColor="#FFFFFF" />
		<Switch
			android:id="@+id/settingFullscreen"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="60dp"
			android:paddingTop="4dp"
			android:paddingRight="8dp"
			android:paddingBottom="4dp"
			android:gravity="left|center_vertical"
			android:text="Hide Notificationbar"
			android:textSize="12sp"
			android:textStyle="italic"
			android:textColor="#FFFFFF" />
		<Switch
			android:id="@+id/settingClock"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="60dp"
			android:paddingTop="4dp"
			android:paddingRight="8dp"
			android:paddingBottom="4dp"
			android:gravity="left|center_vertical"
			android:text="Show a Clock"
			android:textSize="12sp"
			android:textStyle="italic"
			android:textColor="#FFFFFF" />
		<LinearLayout
			android:id="@+id/optionDigiAna"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingRight="8dp"
			android:orientation="vertical"
			android:layout_gravity="right|center_vertical">
			<RadioButton
				android:id="@+id/settingDigital"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="8dp"
				android:paddingLeft="5dp"
				android:paddingTop="2dp"
				android:paddingRight="5dp"
				android:paddingBottom="2dp"
				android:text="Digital"
				android:textSize="12sp"
				android:textStyle="italic"
				android:textColor="#FFFFFF"
				android:layout_gravity="left|center_vertical" />
			<RadioButton
				android:id="@+id/settingAnalog"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="8dp"
				android:paddingLeft="5dp"
				android:paddingTop="2dp"
				android:paddingRight="5dp"
				android:paddingBottom="2dp"
				android:text="Analog"
				android:textSize="12sp"
				android:textStyle="italic"
				android:textColor="#FFFFFF"
				android:layout_gravity="left|center_vertical" />
		</LinearLayout>
		<Switch
			android:id="@+id/settingEgg"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="60dp"
			android:paddingTop="4dp"
			android:paddingRight="8dp"
			android:paddingBottom="4dp"
			android:gravity="left|center_vertical"
			android:text="Re-Disable Easter Egg"
			android:textSize="12sp"
			android:textStyle="italic"
			android:textColor="#FFFFFF" />
		<ScrollView
			android:id="@+id/upPusher"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:padding="8dp"
			android:layout_weight="5" />
		<LinearLayout
			android:id="@+id/footHeader"
			android:layout_width="match_parent"
			android:layout_height="45dp"
			android:background="#616161"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal">
			<TextView
				android:id="@+id/backButton"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingLeft="15dp"
				android:paddingTop="6dp"
				android:paddingRight="15dp"
				android:paddingBottom="6dp"
				android:gravity="center_horizontal|center_vertical"
				android:text="â—€"
				android:textSize="20sp"
				android:textStyle="bold"
				android:textColor="#FDD835" />
			<TextView
				android:id="@+id/versionSpam"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingLeft="8dp"
				android:paddingTop="8dp"
				android:paddingRight="6dp"
				android:paddingBottom="8dp"
				android:gravity="right|center_vertical"
				android:text="v0.00 [b0] ~ PhoeniX"
				android:textSize="10sp"
				android:textStyle="italic"
				android:textColor="#E0E0E0"
				android:layout_weight="5" />
			<ImageView
				android:id="@+id/cVnLogo"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:paddingLeft="4dp"
				android:paddingTop="4dp"
				android:paddingRight="12dp"
				android:paddingBottom="4dp"
				android:src="@drawable/cvn_short"
				android:scaleType="centerInside"
				android:layout_gravity="center_horizontal|center_vertical" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
